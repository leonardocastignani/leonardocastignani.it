---
import Layout from '../layouts/Layout.astro';
import { getI18N } from '../i18n/utils';

// Importiamo i dati JSON diretti per avere accesso alle stringhe inglesi
import enData from '../i18n/en.json';

// Usiamo i18n standard per il default (Italiano)
const i18n = getI18N({ astroUrl: Astro.url });
const homeLink = i18n.error404.homeLink;
---

<Layout title={`404: ${i18n.error404.title}`} description={i18n.error404.description}>
    <section class="h-screen flex flex-col justify-center items-center text-center p-4 -mt-20">
        <h1 class="text-8xl font-extrabold text-blue-500">404</h1>
        
        <h2 
            id="error-title" 
            class="text-3xl md:text-4xl font-bold mt-4 mb-2"
            data-en={enData.error404.title}
        >
            {i18n.error404.title}
        </h2>
        
        <p 
            id="error-subtitle" 
            class="text-lg text-gray-600 dark:text-gray-300 mb-8"
            data-en={enData.error404.subtitle}
        >
            {i18n.error404.subtitle}
        </p>
        
        <a 
            id="error-button" 
            href={homeLink} 
            class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-3 px-6 rounded-lg transition-colors"
            data-en-text={enData.error404.button}
            data-en-link={enData.error404.homeLink}
        >
            {i18n.error404.button}
        </a>
    </section>
</Layout>

<script>
    import { init404 } from '../scripts/handle404.js';
    // Lo script viene importato ed eseguito automaticamente
</script>