---
import { Image } from 'astro:assets';

const { project, modalStrings } = Astro.props;
const { image, title, description, tags } = project;
const modalId = `modal-${title.replace(/\s+/g, '-').toLowerCase()}`;
---

<div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg flex flex-col h-full border border-gray-700">
    {image && (
        <div class="w-full h-48 bg-gray-900">
            <Image src={image} alt={`Screenshot del progetto ${title}`} class="w-full h-full object-contain p-4" loading="lazy" quality={85} />
        </div>
    )}
    <div class="p-6 flex flex-col flex-grow">
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-gray-400 mb-4 text-sm leading-relaxed flex-grow">{description}</p>

        <div class="flex flex-wrap gap-2 mb-4">
            {tags.map((tag: string) => (
                <span class="text-xs bg-gray-700 text-blue-300 px-2 py-1 rounded-full">{tag}</span>
            ))}
        </div>

        <div class="flex justify-center gap-4 mt-auto pt-4 border-t border-gray-700">
            <button 
                data-modal-open={modalId}
                class="border border-white text-white font-bold py-2 px-6 rounded-lg transition-colors hover:bg-white hover:text-gray-900" 
                aria-label={`${modalStrings.detailsAriaLabel} ${title}`}
            >
                {modalStrings.details}
            </button>
        </div>
    </div>
</div>