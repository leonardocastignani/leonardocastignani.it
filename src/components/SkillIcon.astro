---
interface Props {
  name: string;
  Icon: any;
}
const { name, Icon } = Astro.props;
---

<div class="group relative flex flex-col items-center justify-center p-2">
  
  <!-- Icona -->
  <div class="w-12 h-12 text-gray-400 group-hover:text-white transition-colors duration-300 ease-in-out transform group-hover:scale-110">
    <Icon class="w-full h-full" />
  </div>
  
  <!-- Tooltip (Nome che compare all'hover) -->
  <div class="absolute -top-10 left-1/2 -translate-x-1/2 px-3 py-1 bg-gray-700 text-white text-xs font-semibold rounded opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none whitespace-nowrap shadow-xl z-10 capitalize translate-y-2 group-hover:translate-y-0">
    {name}
    <!-- Freccina decorativa del tooltip -->
    <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-gray-700 rotate-45"></div>
  </div>
</div>