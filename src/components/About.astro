---
import { getI18N } from '../i18n/utils';
import { Image } from 'astro:assets';
import profileImg from "../assets/profilo.jpg";

const i18n = getI18N({ astroUrl: Astro.url });
const titleId = "about-title";
---

<section id="about" class="py-20 px-4 bg-gray-800 fade-in-section" aria-labelledby={titleId}>
    <div class="container mx-auto max-w-5xl grid md:grid-cols-3 gap-12 items-center">
        <div class="md:col-span-1 flex justify-center">
            <Image
                src={profileImg} 
                alt="Foto di Leonardo Castignani" 
                class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover border-4 border-blue-500 shadow-lg"
                loading="lazy"
                quality={85}
            />
        </div>
        <div class="md:col-span-2 text-center md:text-left">
            <h2 id={titleId} class="text-3xl md:text-4xl font-bold mb-4">{i18n.about.title}</h2>
            <p class="text-gray-300 leading-relaxed">
                {i18n.about.p1}
            </p>
            <p class="text-gray-300 leading-relaxed mt-4">
                {i18n.about.p2}
            </p>
        </div>
    </div>
</section>