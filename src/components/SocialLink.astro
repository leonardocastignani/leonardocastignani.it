---
// --- INITIAL CONFIGURATION ---
interface Props {
  href: string;
  name: string;
  Icon: any;
  ariaLabel: string;
}
const { href, name, Icon, ariaLabel } = Astro.props;
---

<!-- SOCIAL ICON COMPONENT -->
<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group relative flex flex-col items-center justify-center p-2 focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-500"
  aria-label={ariaLabel}
>
  {/* ICON CONTAINER */}
  <div class="w-12 h-12 text-gray-400 group-hover:text-white transition-colors duration-300 ease-in-out transform group-hover:scale-110 [&_path]:!fill-current">
    <Icon class="w-full h-full" />
  </div>

  {/* TOOLTIP */}
  <div class="absolute -top-10 left-1/2 -translate-x-1/2 px-3 py-1 bg-gray-700 text-white text-xs font-semibold rounded opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none whitespace-nowrap shadow-xl z-10 capitalize translate-y-2 group-hover:translate-y-0">
    {name}
    <div class="absolute -bottom-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-gray-700 rotate-45"></div>
  </div>
</a>